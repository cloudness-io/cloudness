package vvolume

import "github.com/cloudness-io/cloudness/types"
import "github.com/cloudness-io/cloudness/app/web/views/shared"
import "github.com/cloudness-io/cloudness/types/enum"

templ List(volumes []*types.Volume) {
	if len(volumes) == 0 {
		@shared.NoDataCard("No volumes attached to this application", nil)
	} else {
		<div class="mt-2 flex flex-wrap gap-4">
			for _, volume := range volumes {
				@tile(volume, enum.VolumeFormActionUpdate)
			}
		</div>
	}
}
